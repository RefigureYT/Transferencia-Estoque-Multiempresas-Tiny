# .env

# --- Configuração do Banco de Dados Principal ---
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_DATABASE=postgres
DB_SSL=true

# --- Lista de Empresas Ativas (separadas por vírgula) ---
# O código vai ler esta linha para saber quais empresas processar.
ACTIVE_COMPANIES=JP,LT,JF

# --- Configurações da Empresa JP (Jaú Pesca) ---
JP_NOME="Jaú Pesca [Silvio]"
JP_TOKEN_SOURCE=db # Isso indica que será buscado dentro do banco de dados
JP_TOKEN_QUERY="Query para buscar o token" # Lembre-se que o comando deve retornar diretamente a célula com o access token e não a linha inteira!
JP_IS_MASTER=true # Indica que essa é a empresa principal (A que possui estoque "REAL")


# --- Configurações da Empresa LT (LT Sports) ---
LT_NOME="LT Sports [Lucas]"
LT_TOKEN_SOURCE=db # Isso indica que será buscado dentro do banco de dados
LT_TOKEN_QUERY="Query para buscar o token"
LT_IS_MASTER=false # Indica que essa é a empresa que usa o estoque da empresa principal (A que possui estoque "ESPELHADO")


# --- Configurações da Empresa JF (Jaú Fishing) ---
JF_NOME="Jaú Fishing [Leandro]"
JF_TOKEN_SOURCE=db # Isso indica que será buscado dentro do banco de dados
JF_TOKEN_QUERY="Query para buscar o token"
JF_IS_MASTER=false # Indica que essa é a empresa que usa o estoque da empresa principal (A que possui estoque "ESPELHADO")










